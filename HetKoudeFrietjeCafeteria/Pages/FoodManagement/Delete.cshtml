@page
@model HetKoudeFrietjeCafeteria.Pages.FoodManagement.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijder</h1>

<h3>Weet je zeker dat je dit product wil verwijderen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Name)
        </dd>
        <dt class="col-sm-2">
            Beschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Description)
        </dd>
        <dt class="col-sm-2">
            Prijs
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.BasePrice)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Food.FoodID" />
        <input type="submit" value="Verwijder" class="btn btn-danger" /> |
        <a asp-page="./Index">Terug</a>
    </form>
</div>
