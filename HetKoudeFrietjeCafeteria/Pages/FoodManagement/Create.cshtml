@page
@model HetKoudeFrietjeCafeteria.Pages.FoodManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Aanmaken</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Naam</label>
                <input asp-for="Food.Name" class="form-control" />
                <span asp-validation-for="Food.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Beschrijving</label>
                <input asp-for="Food.Description" class="form-control" />
                <span asp-validation-for="Food.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Prijs</label>
                <input asp-for="Food.BasePrice" class="form-control" />
                <span asp-validation-for="Food.BasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
